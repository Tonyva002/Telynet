<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/common_margin_min"
    android:layout_marginHorizontal="@dimen/common_margin_min">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgPhoto"
            android:layout_width="@dimen/common_image_default"
            android:layout_height="@dimen/common_image_default"
            android:layout_margin="@dimen/common_margin_min"
            android:layout_gravity="center_vertical"
            android:src="@android:drawable/btn_star_big_on"
            android:contentDescription="@string/image_message" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/common_margin_default"
            android:text=""
            android:textColor="#333"/>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>